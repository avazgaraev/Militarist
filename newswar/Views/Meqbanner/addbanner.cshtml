
@{
    ViewBag.Title = "addbanner";
    Layout = "~/Shared/layoutadmin.cshtml";
}

<h2>addbanner</h2>

@using (Html.BeginForm("addbanner", "meqbanner", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <form method="post" class="form-group">


        <input type="file" class="form-control mt-3" placeholder="Banner şəkil" name="sekil" /><br />


        @*<h1 id="log"></h1>*@
        <input type="text" class="form-control mt-3" placeholder="Banner yazısı" name="bannerad" /><br />
        <input type="color" class="form-control mt-3" placeholder="Banner ad rengi" name="banneradreng" /><br />
        <label>Status:</label>
        <input type="checkbox" class=" mt-3" checked placeholder="Banner status" name="available" /><br />
        

        <button class="btn btn-success">Təsdiq</button>
    </form>
}